        function finalPayment() {

            var objOrderViewModel = {};
            var ListOfOrderDetailViewModel = new Array();

            objOrderViewModel.PaymentTypeId = $("#PaymentType").val();
            objOrderViewModel.CustomerId = $("#Customer").val();
            objOrderViewModel.FinalTotal = $("#txtSonToplam").val();

            $("#tblRestoranUrunListesi").find("tr:gt(0)").each(function () {

                var OrderDetailViewModel = {};
                OrderDetailViewModel.Total = parseInt($(this).find("td:eq(5)").text());
                OrderDetailViewModel.ItemId = parseInt($(this).find("td:eq(0)").text());
                OrderDetailViewModel.UnitPrice = parseInt($(this).find("td:eq(2)").text());
                OrderDetailViewModel.Quantity = parseInt($(this).find("td:eq(3)").text());
                OrderDetailViewModel.Discount = parseInt($(this).find("td:eq(4)").text());

                ListOfOrderDetailViewModel.push(OrderDetailViewModel);

            }); 

            objOrderViewModel.ListOfOrderDetailViewModel = ListOfOrderDetailViewModel;

            $.ajax({
                async: true,
                type: 'POST',
                dataType: 'JSON',
                contentType: 'application/json ; charset=utf-8',
                data: JSON.stringify(objOrderViewModel),
                url: '/Home/Index',
                success: function (data) {
                    alert(data);
                },
                error: function () {
                    alert("There was a problem during the process.");
                }

            });

        }


        function calculateBalance() {

            var finalAmount = $('#txtPaymentTotal').val();
            var paymentAmount = $('#txtPaymentAmount').val();
            var returnAmount = $('#txtReturnTotal').val();
            var balanceAmount = parseInt(finalAmount) - parseInt(paymentAmount) + parseInt(returnAmount);
            $('#txtBalance').val(parseInt(balanceAmount));

            if (parseInt(balanceAmount) == 0) {
                $('#btnSonOdeme').removeAttr("disabled");
            }
            else {
                $('#btnSonOdeme').attr("disabled", "disabled");
            }

        }


        function RemoveItem(itemId) {
            $(itemId).closest('tr').remove();
        }

        function UrunuSepeteEkle() {

            var tblUrunListesi = $("#tblRestoranUrunListesi");
            var birimfiyati = $("#txtBirimFiyati").val();
            var miktar = $("#txtMiktar").val();
            var indirim = $("#txtIndirim").val();
            var toplam = (birimfiyati * miktar) - indirim;
            var itemId = $("#Item").val();
            var itemName = $("#Item option:selected").text();

            var itemList = "<tr><td hidden>" +
                itemId +
                "</td><td>" +
                itemName +
                "</td><td>" +
                birimfiyati +
                "</td><td>" +
                miktar +
                "</td><td>" +
                indirim +
                "</td><td>" +
                toplam +
                "</td><td> <input type='button' value='DELETE' class='btn btn-danger' onclick='RemoveItem(this)' /> </td> </tr>";

            tblUrunListesi.append(itemList);
            sonUrunToplami();
            resetItem();
        }

        function sonUrunToplami() {
            $("#txtSonToplam").val(0);
            var sonToplam = 0;

            $("#tblRestoranUrunListesi").find("tr:gt(0)").each(function () {

                var toplam = parseInt($(this).find("td:eq(5)").text());
                sonToplam += toplam;
            });


            $("#txtSonToplam").val(sonToplam);
            $('#txtPaymentTotal').val(sonToplam);
            $('#txtBalance').val(sonToplam);

        }

        function resetItem() {
            $("#txtBirimFiyati").val('');
            $("#txtMiktar").val('');
            $("#txtIndirim").val('0');
            $("#Item").val(0);
            $("#txtToplamFiyat").val("");
        }

        function CalculateSubTotal() {
            var birimfiyati = $("#txtBirimFiyati").val();
            var miktar = $("#txtMiktar").val();
            var indirim = $("#txtIndirim").val();

            var toplam = (birimfiyati * miktar) - indirim;
            $("#txtToplamFiyat").val(toplam);
        }

        function GetItemUnitPrice(itemId) {

            $.ajax({
                async: true,
                type: 'GET',
                dataType: 'JSON',
                contentType: 'application/json ; charset=utf-8',
                url: '/Home/getItemUnitPrice',
                data: { itemId: itemId },
                success: function (data) {
                    $("#txtBirimFiyati").val(data);
                },
                error: function () {
                    alert("Ürün fiyatini alirken bir sorun olustu...");
                }
            });
        }
    </script>
