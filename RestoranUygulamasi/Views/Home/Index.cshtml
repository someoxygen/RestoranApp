    <script type="text/javascript">
        $(document).ready(function () {
            $("#Item").val(0);
            $("#Item").change(function () {
                var itemId = $("#Item").val();
                GetItemUnitPrice(itemId);
            });

            $("input[type=text]").change(function () {
                CalculateSubTotal();
            });

            $("input[type=text]").keyup(function () {
                calculateBalance();
            });

            $("#btnListeyeEkle").click(function () {
